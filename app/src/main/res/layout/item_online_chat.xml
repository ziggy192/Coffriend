<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        android:id="@+id/imgOnlineProfile"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgOnlineProfile"
        android:textAlignment="center"
        android:id="@+id/txtOnlineTitle"
        android:text="Title" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/imgOnlineProfile"
        android:layout_alignEnd="@+id/imgOnlineProfile"
        android:src="@color/colorCheckTopic"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".ChoiceLocationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/text_underline_dotted"
        android:text="Your country"
        android:onClick="showCountryDialog"
        android:id="@+id/txtCountry"
        android:textSize="25dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:id="@+id/lvTopics">

    </ListView>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/text_underline_dotted"
    android:text="Your province"
    android:onClick="showProvinceDialog"
    android:id="@+id/txtProvince"
    android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/text_underline_dotted"
        android:text="Your district"
        android:onClick="showDistrictDialog"
        android:id="@+id/txtDistrict"
        android:textSize="25dp" />
</LinearLayout>